<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/foorprnt_rl_vp_background"
   >
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:layout_gravity="center"
            android:id="@+id/ryview_foorpint_item_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ffffff">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_marginBottom="3dp"
             android:layout_gravity="bottom|center_horizontal"
             android:gravity="center"
             android:orientation="horizontal"
             android:background="#00000000"
             android:id="@+id/ryview_foorpint_item_ll"
             android:layout_width="match_parent"
             android:layout_height="10dp">
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_marginBottom="2dp"
        android:id="@+id/ryview_foorprint_item_tv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:paddingTop="20dp"
        android:text="内容"
        android:typeface="sans"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="10sp" />
    <TextView
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:id="@+id/ryview_foorprint_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:layout_marginRight="10dp"
        android:textColor="#8b8a8a"
        android:textSize="10sp" />

</LinearLayout>
